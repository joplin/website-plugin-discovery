<a href="plugin/{{id}}/" id="plugin-card-{{id}}" class="col-md-12 gx-3 mb-3 card plugin-link-card">
	<img src="{{assets.iconUri}}" class="card-img-top" alt=""/>
	<div class="card-body {{domId}}">
		<h5 class="text-wrap pb-2">
			<label for="plugin-card-{{id}}" class="plugin-title">
				{{ name }}
			</label>
		</h5>

		<p class="plugin-description">
			{{ description }}
		</p>

		<div class="recommended-badge-spacer"></div>
		<div class="recommended-badge-container">
		{{#_recommended}}
			<span class="plugin-recommended me-2 badge"><i class="fas fa-check"></i> Recommended</span>
		{{/_recommended}}
		</div>
	</div>
</a>